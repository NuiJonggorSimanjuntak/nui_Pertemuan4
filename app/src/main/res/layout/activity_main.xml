<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/btn_bg"
        android:onClick="ShowToast"
        android:radius="45dp"
        android:text="Buka Toast Dialog"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        app:backgroundTint="#62918a" />

    <Button
        android:id="@+id/btnGo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/btn_bg"
        android:onClick="openAlertDialog"
        android:radius="45dp"
        android:text="Buka Alert Dialog"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        app:backgroundTint="#62918a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGo2"
        android:layout_width="234dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnGo1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/btn_bg"
        android:onClick="openConfirmDialog"
        android:radius="45dp"
        android:text="Buka Confimation Dialog"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        app:backgroundTint="#62918a" />

    <Button
        android:id="@+id/btnGo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGo2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/btn_bg"
        android:onClick="openCustomeDialog"
        android:radius="45dp"
        android:text="Buka Custome Dialog"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        app:backgroundTint="#62918a" />

</RelativeLayout>